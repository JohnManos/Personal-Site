server {
      listen 80;
      listen [::]:80;

      root /var/www/johnmanos.dev/html/my-personal-site;
      index index.html index.htm index.nginx-debian.html;

      server_name johnmanos.dev www.johnmanos.dev;

      location / {
         try_files $uri $uri/ /index.html =404;
      }

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/johnmanos.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/johnmanos.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
